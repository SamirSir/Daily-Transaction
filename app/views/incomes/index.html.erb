

<div class="row" style="min-height: 100vh;">
   
    <%# analysis panel %>
    <div class="col-md-2">
        <%= render 'layouts/side_panel', name: "Income", create_action: "/groups/#{@group.id}/incomes/create" %>
    </div>

    <%# main body %>
    <div class="col-md-10">
        <div class="row m-auto">
            <%# record %>
            <div class="col-md-8">
                <%= render 'layouts/all_ise', ises: @incomes, edit_action: "/groups/#{@group.id}/incomes/edit" %>
            </div>

            <%# info %>
            <div class="col-md-4">
                <%= render 'layouts/chart', ise: @incomes_for_graph, ise_type: "Income", xtitle: "Source" %> 
            </div>  
           
        </div>
    </div>
    
</div>  


<script type="text/javascript">
$(function(){

    
    // note put scripts in  main page rather than partial
    // delete operation of ISE
    $("button.delete_id").on("click", function(){
        var delete_ise = $(this).attr('data-id'); 
        console.log(delete_ise);

        $.ajax({
            url: '/groups/<%= @group.id %>/incomes/delete',
            type: 'delete',
            dataType: 'json',
            data: {delete_id: delete_ise},
            success: function(response){
                location.reload();
            },
            error: function(e){
                console.log(e)
            },
        });


    });
      
}); 
</script>