<!DOCTYPE html>
<html>
  <head>
    <title>DailyTransaction</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia&effect=neon|outline|emboss|shadow-multiple">

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
  </head>

  <body>

    <%# render 'layouts/alert' %>
    <%# toastr notification %>
    <% if flash.any? %>
      <script type="text/javascript">
        <% flash.each do |key, val| %>
          <% type = key.to_s.gsub('notice', 'success').gsub('alert', 'error') %>
          toastr.<%= type %>('<%= val %>')
        <% end %>
      </script>
    <% end %>

    <%# navbar  %>
    <%# render 'layouts/navbar' %>
    <%= render 'layouts/main_nav' %>

    <div class="" style="min-height: 100vh;">
      <%= yield %>
    </div>

    <%= render '/layouts/footer' %>

  </body>

</html>



