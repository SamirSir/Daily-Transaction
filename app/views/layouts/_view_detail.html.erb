<div class="modal fade" id="viewDetail<%= ise.id %>">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <%# header %>
            <div class="modal-header bg-primary text-light">
                <div class="modal-title font-weight-bolder"><%= ise_type %> Details</div>
                <button class="close text-light" data-dismiss="modal">&times;</button>
            </div>

            <%# body %>
            <div class="modal-body bg-light">
                <p>
                <% if ise.has_attribute?('source') %>
                    <strong>Source:</strong> <%= ise.source %>
                <% elsif ise.has_attribute?('spent_on') %>
                    <strong>Spent On:</strong> <%= ise.spent_on %>
                <% elsif ise.has_attribute?('saved_on') %>
                    <strong>Saved On:</strong> <%= ise.saved_on %>
                <% elsif ise.has_attribute?('loan_from') %>
                    <strong>Loan From:</strong> <%= ise.loan_from %>
                <% end %>
                </p>
                <p><strong>Amount:</strong>  Rs.<%= ise.amount %> </p>
                <p><strong>Description:</strong> <%= ise.description %></p>
                <p><strong>Created at:</strong> <%= ise.created_at %></p>
                <p><strong>Updated at:</strong> <%= ise.updated_at %></p>
            </div>

            <%# footer %>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


