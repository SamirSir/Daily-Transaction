
<!--Modal: modalConfirmDelete-->
<div class="modal fade" id="cancelMemberRequest<%= group[0] %><%= member.id %>" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-sm">
    <!--Content-->
    <div class="modal-content text-center">
      <!--Header-->
      <div class="modal-header bg-primary text-light d-flex justify-content-center">
        <i class="fas fa-times fa-3x text-white"></i>
      </div>

      <!--Body-->
      <div class="modal-body">
        <p class="heading m-0 text-primary font-weight-bold">Are you sure to cancel member request for '<%= username(member.id) %>' from '<%= group[1] %>' group?</p>
      </div>

      <!--Footer-->
      <div class="modal-footer flex-center justify-content-center">
        <button class="btn btn-outline-primary cancelMemberRequest" data-group-id="<%= group[0] %>" data-member-id="<%= member.id %>">Yes</button>
        <button type="button" class="btn  btn-primary waves-effect" data-dismiss="modal">No</button>
      </div>
    </div>
    <!--/.Content-->
  </div>
</div>
