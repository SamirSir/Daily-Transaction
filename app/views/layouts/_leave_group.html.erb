
<!--Modal: modalConfirmDelete-->
<div class="modal fade" id="leaveGroup<%= group[0] %>" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-sm">
    <!--Content-->
    <div class="modal-content text-center">
      <!--Header-->
      <div class="modal-header bg-primary text-light d-flex justify-content-center">
        <i class="fa fa-sign-out-alt fa-3x text-white"></i>
      </div>

      <!--Body-->
      <div class="modal-body">
        <p class="heading m-0 text-primary font-weight-bold">Are you sure to leave '<%= group[1] %>' group?</p>
      </div>

      <!--Footer-->
      <div class="modal-footer flex-center justify-content-center">
        <button class="btn btn-outline-primary leave_group" data-id="<%= group[0] %>">Yes</button>
        <button type="button" class="btn  btn-primary waves-effect" data-dismiss="modal">No</button>
      </div>
    </div>
    <!--/.Content-->
  </div>
</div>
